@import '../../styles/index'

// TODO: on escape zoom out and clear input
.navbar
  background red
  box-shadow 0px -2px 27px 2px rgba(117,117,117,0.5)
  padding 0 !important
  z-index 100

.listingSearchbar
  width 100%
  max-width 392px
  margin auto

  &__input
    background red
    border none
    height 60px
    color white
    font-size 1.5rem
    width 100%
    margin-left 1rem
    caret-color rgba(0, 0, 0, 0)

    &:focus
      outline none

    &::placeholder
      color white

  &__cursor
    position absolute
    top 6px
    width 4px
    height 47px
    background rgba(250, 250, 250, 0.6)
    margin-left 12px
